<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingTop="20dp"
    android:paddingRight="15dp">

    <ImageView
        android:id="@+id/imageTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_todo" />

    <TextView
        android:id="@+id/textDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/imageTask"
        tools:text="Description" />

    <TextView
        android:id="@+id/textPriority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textDescription"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/imageTask"
        tools:text="Prioridade" />

    <TextView
        android:id="@+id/textDueDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view_divisor"
        android:layout_alignParentEnd="true"
        tools:text="Date"/>

    <View
        android:id="@+id/view_divisor"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/textPriority"
        android:layout_marginTop="20dp"
        android:background="#ECECEC"/>

</RelativeLayout>